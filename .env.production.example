# Heirloom Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_postgres_password_here
DATABASE_URL=postgresql://heirloom_user:your_super_secure_postgres_password_here@postgres:5432/heirloom_production

# Redis Configuration
REDIS_PASSWORD=your_super_secure_redis_password_here
REDIS_URL=redis://:your_super_secure_redis_password_here@redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Application URLs
FRONTEND_URL=https://heirloom.app
BACKEND_URL=https://heirloom.app/api

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_admin_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@heirloom.app
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@heirloom.app

# AI Configuration
OLLAMA_URL=http://ollama:11434
OPENAI_API_KEY=your_openai_api_key_for_fallback

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=heirloom-production-storage

# CDN Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_S3_BUCKET=heirloom-backups
BACKUP_SCHEDULE=0 2 * * *

# Monitoring & Alerting
SENTRY_DSN=your_sentry_dsn_for_error_tracking
SLACK_WEBHOOK_URL=your_slack_webhook_for_alerts
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_AI_FEATURES=true
ENABLE_BLOCKCHAIN_FEATURES=false
ENABLE_MOBILE_APP=true

# Performance Configuration
MAX_UPLOAD_SIZE=100MB
MAX_VIDEO_SIZE=500MB
IMAGE_COMPRESSION_QUALITY=85
VIDEO_COMPRESSION_BITRATE=2000k

# Legal & Compliance
PRIVACY_POLICY_VERSION=1.0
TERMS_OF_SERVICE_VERSION=1.0
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true